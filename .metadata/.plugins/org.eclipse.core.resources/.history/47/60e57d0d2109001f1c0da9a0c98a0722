	public static Note createNote() {
		// date
		Date date = new Date();
		DateFormat shortDateFormat = DateFormat.getDateTimeInstance(
			DateFormat.SHORT,
			DateFormat.SHORT
		);

		String today = shortDateFormat.format(date);
		System.out.println(date);
		
		// titre
		// content
