package game;

import model.Joueur;

import java.util.ArrayList;

import model.Character;
import model.Enemy;

public class Game {

	String[][] carte = new String[10][10];
	Character link = new Joueur(5,5,"L", 3);
	Character skeleton = new Enemy(5,9,"S");
	Character rat = new Enemy(3,2,"R");
	Character bat = new enemy(8,1,"B");
	ArrayList<Enemy> enemyList = new ArrayList<Enemy>;
		ene{skeleton, rat, bat}
	
	public void launch() {
		carte = createTab(carte);
		carte = updateTabWithPerso(carte, link);
		for(Character character: enemyList) {
			carte = updateTabWithPerso(carte, character);
		}
		printTab(carte);
		
	}
	private String[][] updateTabWithPerso(String[][] carte2, Character link) {
		carte[link.getX()][link.getY()] = link.getSprite();
		return carte;
	}
	public static void printTab(String[][] carte) {
		for(int i = 0; i<carte.length; i++) {
			System.out.println();
			for(int j = 0; j<carte.length; j++) {
				System.out.print(carte[i][j]);
			}
		}
		System.out.println();
	}
	private String[][] createTab(String[][] tab){
		for(int i = 0; i<carte.length; i++) {
			for(int j = 0; j<carte.length; j++) {
				if (j!=0 || j !=carte.length-1 || i!=0 || i !=carte.length-1){
					tab[i][j] = "  ";					
				}
				if(i==0 || i ==carte.length-1) {
					tab[i][j] = "- ";
				}
				if(j==0 || j ==carte.length-1) {
					tab[i][j] = "|";
				}
				
			}
		}
		return carte;
	}
	
	
}
